<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-container">
          <h4>Update your <%= @income.category %> income</h4>
          <%= simple_form_for @income do |f| %>
            <div class="category income-category text-center col-xs-4" id="Salary">
              <div class="category-content">
                <i class="fa fa-briefcase" aria-hidden="true"></i>
                <p>Salary</p>
              </div>
            </div>
            <div class="category income-category text-center col-xs-4" id="From savings">
              <div class="category-content">
                <i class="fa fa-money" aria-hidden="true"></i>
                <p>From savings</p>
              </div>
            </div>
            <div class="category income-category text-center col-xs-4" id="Others">
              <div class="category-content">
                <i class="fa fa-gift" aria-hidden="true"></i>
                <p>Others</p>
              </div>
            </div>
            <%= f.input :category, collection: [ "Salary", "Transfer from savings", "Others" ], as: :hidden %>
            <%= f.input :amount %>
            <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
            <%= f.input :comment %>
            <%= f.submit class: "btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
