<div class="container operations">
  <h3>Incomes</h3>
  <table>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Comment</th>
    </tr>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.date.strftime('%d/%m/%Y') %></td>
        <td><%= income.amount %></td>
        <td><%= income.category %></td>
        <td><%= income.comment ? income.comment : "" %></td>
    </tr>
    <% end %>
  </table>

  <h3>Expenses</h3>
  <table>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Comment</th>
    </tr>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.date.strftime('%d/%m/%Y') %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.category %></td>
        <td><%= expense.comment ? expense.comment : "" %></td>
    </tr>
    <% end %>
  </table>

  <%= pie_chart @expenses.group(:category).count %>


</div>
