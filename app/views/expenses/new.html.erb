<div class="form-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="form-container">
          <h4>Add a new expense</h4>
          <%= simple_form_for @expense do |f| %>
            <div class="category text-center col-xs-4" id="Transports">
              <div class="category-content">
                <i class="fa fa-subway" aria-hidden="true"></i>
                <p>Transports</p>
              </div>
            </div>
            <div class="category text-center col-xs-4" id="Phone">
              <div class="category-content">
                <i class="fa fa-phone" aria-hidden="true"></i>
                <p>Phone</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-ticket" aria-hidden="true"></i>
                <p>Subscriptions</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-money" aria-hidden="true"></i>
                <p>Savings</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-euro" aria-hidden="true"></i>
                <p>Income taxes</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-home" aria-hidden="true"></i>
                <p>Rent</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-euro" aria-hidden="true"></i>
                <p>Insurance</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-euro" aria-hidden="true"></i>
                <p>Home taxes</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                <p>Lessons</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-cutlery" aria-hidden="true"></i>
                <p>Restaurants & Drinks</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                <p>Groceries</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-shopping-bag" aria-hidden="true"></i>
                <p>Shopping & Holidays</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-credit-card" aria-hidden="true"></i>
                <p>Withdrawals</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-medkit" aria-hidden="true"></i>
                <p>Health</p>
              </div>
            </div>
            <div class="category text-center col-xs-4">
              <div class="category-content">
                <i class="fa fa-gift" aria-hidden="true"></i>
                <p>Gifts</p>
              </div>
            </div>
            <%= f.input :category, collection: [ "Transports", "Subscriptions", "Phone", "Savings", "Income taxes", "Home taxes", "Rent", "Insurance", "Courses", "Restaurants & Drinks", "Groceries", "Shopping & Holidays", "Health", "Withdrawals", "Gifts" ], as: :hidden %>
            <%= f.input :amount %>
            <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
            <%= f.input :comment %>
            <%= f.submit class: "btn btn-primary btn-lg"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
